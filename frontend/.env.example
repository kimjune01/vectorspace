# VectorSpace Frontend Environment Configuration
# Copy this file to .env and configure as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_BASE_URL=ws://localhost:8000/api/ws

# Application Settings
VITE_APP_NAME=VectorSpace
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEBUG=true
VITE_ENVIRONMENT=development

# Auto-login for development (set to 'true' to enable automatic login with test user)
# WARNING: Only enable this for local development, never in production!
# This is useful for cucumber testing and rapid development iteration
VITE_AUTO_LOGIN=false